<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.realworld.article.domain.repository.ArticleRepository">
    <delete id="deleteAll">
        delete from article
    </delete>

    <delete id="delete" parameterType="Long">
        delete from article where article_id = #{id}
    </delete>

    <select id="resetAutoIncrement">
        alter table article AUTO_INCREMENT = 1
    </select>

    <insert id="create" parameterType="Article" useGeneratedKeys="true" keyProperty="id" keyColumn="article_id">
        insert into article(slug, title, description, body, user_id)
        values (#{slug}, #{title}, #{description}, #{body}, #{userId})
    </insert>

    <sql id="getArticle">
        select article_id as id, slug, title, description, body, user_id as userId, created_at as createdAt, updated_at as updatedAt
        from article
    </sql>

    <select id="getMaxId" resultType="Long">
        select max(article_id) as max_id from article
    </select>

    <select id="getById" parameterType="Long" resultType="GetArticleDto">
        <include refid="getArticle"/>
        where article_id = #{id}
    </select>

    <select id="getBySlug" parameterType="String" resultType="GetArticleDto">
        <include refid="getArticle"/>
        where slug = #{slug}
    </select>
</mapper>