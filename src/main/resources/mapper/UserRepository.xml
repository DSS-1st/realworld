<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.realworld.user.domain.repository.UserRepository">
    <delete id="deleteAll">
        delete from users
    </delete>

    <select id="resetAutoIncrement">
        alter table users auto_increment = 1
    </select>

    <insert id="persist" parameterType="User" useGeneratedKeys="true" keyProperty="id" keyColumn="user_id">
        insert into users(username, email, password)
        values (#{username},#{email},#{password})
    </insert>

    <sql id="getUsers">
        select user_id, email, username, password, bio, image, created_at, updated_at
        from users
    </sql>

    <select id="findByUsername" parameterType="String" resultType="User">
        <include refid="getUsers"/>
        where username = #{username}
    </select>

    <select id="findByEmail" parameterType="String" resultType="User">
        <include refid="getUsers"/>
        where email = #{email}
    </select>

    <select id="findById" parameterType="long" resultType="User">
        <include refid="getUsers"/>
        where user_id = #{id}
    </select>
</mapper>