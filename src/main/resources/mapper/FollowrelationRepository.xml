<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.realworld.user.domain.repository.FollowRelationRepository">
    <insert id="save" parameterType="FollowRelation">
        insert into follow_relation(followee_id, follower_id)
        values (#{followeeId}, #{followerId})
    </insert>

    <delete id="cancelFollow">
        delete from follow_relation where followee_id = #{followeeId} and follower_id = #{followerId}
    </delete>

    <select id="followCheck" resultType="int">
        select count(*) from follow_relation where followee_id and follower_id = #{followerId}
    </select>

    <delete id="deleteAll">
        delete from follow_relation
    </delete>

    <select id="resetAutoIncrement">
        alter table follow_relation auto_increment = 1
    </select>
</mapper>