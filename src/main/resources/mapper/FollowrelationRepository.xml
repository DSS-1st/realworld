<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.realworld.user.domain.repository.FollowRelationRepository">
    <insert id="save" parameterType="FollowRelation">
        insert into follow_relation(from_user_id, to_user_id)
        values (#{fromUserId}, #{toUserId})
    </insert>

    <delete id="cancelFollow">
        delete from follow_relation where from_user_id = #{fromUserId} and to_user_id = #{toUserId}
    </delete>

    <select id="checkFollowing" resultType="int">
        select count(*) from follow_relation where from_user_id and to_user_id = #{toUserId}
    </select>

    <delete id="deleteAll">
        delete from follow_relation
    </delete>

    <select id="resetAutoIncrement">
        alter table follow_relation auto_increment = 1
    </select>
</mapper>