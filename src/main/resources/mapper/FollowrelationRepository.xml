<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.realworld.user.domain.repository.FollowRelationRepository">
    <insert id="persist" parameterType="FollowRelation">
        insert into follow_relation(from_user_id, to_user_id)
        values (#{loginId}, #{targetId})
    </insert>

    <delete id="delete" parameterType="Long">
        delete from follow_relation where to_user_id = #{targetId} and from_user_id = #{loginId}
    </delete>

    <select id="isFollowing" parameterType="Long" resultType="int">
        select count(*)
        from follow_relation where to_user_id = #{targetId} and from_user_id = #{loginId}
    </select>
</mapper>