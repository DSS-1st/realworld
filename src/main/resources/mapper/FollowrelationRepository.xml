<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.realworld.user.domain.repository.FollowRelationRepository">
    <insert id="persist" parameterType="FollowRelation">
        insert into follow_relation(target_id, login_id)
        values (#{targetId}, #{loginId})
    </insert>

    <delete id="delete" parameterType="Long">
        delete from follow_relation where target_id = #{targetId} and login_id = #{loginId}
    </delete>

    <select id="isFollowing" parameterType="Long" resultType="int">
        select count(*)
        from follow_relation where target_id = #{targetId} and login_id = #{loginId}
    </select>
</mapper>